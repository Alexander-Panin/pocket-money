{
  "name": "ts",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "esbuild:month": "esbuild ./src/month/ --bundle --platform=neutral  --outfile=../static/script/month.js",
    "esbuild:stats": "esbuild ./src/stats/ --bundle --platform=neutral  --outfile=../static/script/stats.js",
    "esbuild:calendar": "esbuild ./src/calendar/ --bundle --platform=neutral  --outfile=../static/script/calendar.js",
    "esbuild:search": "esbuild ./src/search/ --bundle --platform=neutral  --outfile=../static/script/search.js",
    "esbuild:month:prod": "esbuild ./src/month/ --bundle --minify --platform=neutral  --outfile=../static/script/month.js",
    "esbuild:stats:prod": "esbuild ./src/stats/ --bundle --minify --platform=neutral  --outfile=../static/script/stats.js",
    "esbuild:calendar:prod": "esbuild ./src/calendar/ --bundle --minify --platform=neutral  --outfile=../static/script/calendar.js",
    "esbuild:search:prod": "esbuild ./src/search/ --bundle --minify --platform=neutral  --outfile=../static/script/search.js",
    "check-type": "tsc --noEmit",
    "build": "npm run check-type && npm run esbuild:month && npm run esbuild:calendar && npm run esbuild:stats && npm run esbuild:search",
    "build:prod": "npm run esbuild:month:prod && npm run esbuild:calendar:prod && npm run esbuild:stats:prod && npm run esbuild:search:prod"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "typescript": "^5.9.2"
  }
}
