{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "noEmitOnError": true,
    "noEmit": true,
    "target": "es2022",
    "lib": ["es2022", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "noUncheckedIndexedAccess": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}